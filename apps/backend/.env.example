# Database Configuration
# For Neon PostgreSQL, get your connection string from: https://neon.tech
# Format: postgresql://username:password@host/database?sslmode=require
DATABASE_URL=postgresql://your_username:your_password@your-neon-host.neon.tech/your_database?sslmode=require

# JWT Authentication
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters-long-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development

# Phase 3: AI-Powered Todo Chatbot
# OpenAI API key for ChatKit and Agents SDK
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# MCP Server Configuration
MCP_SERVER_PORT=8001
MCP_SERVER_HOST=localhost
